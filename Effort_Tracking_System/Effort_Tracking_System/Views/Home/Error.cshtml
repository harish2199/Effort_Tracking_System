<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="m-lg-2">
        <h2>Error</h2>
        <p>@ViewBag.ErrorMessage</p>
    </div>
    <button class="btn btn-info m-lg-2" onclick="goBack()">Go Back</button>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
